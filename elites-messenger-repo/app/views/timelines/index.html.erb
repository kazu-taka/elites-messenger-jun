<div class="wrapper timeline_wrapper">

  <!-- メッセージ入力 -->
  <div class="input">
    <%= form_for @input_message do |f| %>
        <div class="form-group">
          <%= f.label :message %><br/>
          <%= f.text_area :message, class: 'form-control', row: 3 %>
        </div>
        <div class="actions clearfix">
          <div class="post">
            <%= f.submit 'Post', class: 'btn btn-primary' %>
          </div>
        </div>
    <% end %>
  </div>

</div>